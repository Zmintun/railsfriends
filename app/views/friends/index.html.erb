<% if user_signed_in? %>
  <br>
  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Phone</th>
        <th>Twitter</th>
        <th>User ID</th>
        <th>Action</th>
      </tr>
    </thead>

    <tbody>
      <% @friends.each do |friend| %>
        <tr>
          <td>
            <%= link_to friend.first_name + '' + friend.last_name, friend%>
          </td>
          <td><%= friend.email %></td>
          <td><%= friend.phone %></td>
          <td><%= friend.twitter %></td>
          <td><%= friend.user_id %></td>
          <td>
            <%= link_to 'Edit', edit_friend_path(friend), class:"btn btn-success btn-sm"%>
            <%= link_to 'Destroy', friend, class:"btn btn-danger btn-sm", method: :delete, data: { confirm: 'Are you sure?' } %>
          </td>
          
        </tr>
      <% end %>
    </tbody>
  </table>
  <br>
  <%= link_to 'New Friend', new_friend_path, class:"btn btn-dark" %>
<% else %>
  <h1>Home#index</h1>
  <p>Find me in app/views/home/index.html.erb</p>
<% end %>
